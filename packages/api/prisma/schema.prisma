generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  email       String    @unique
  password    String
  communityId String    @db.ObjectId
  community   Community @relation(fields: [communityId], references: [id])
}

model Community {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  name    String @unique
  members User[]
}
